<div class="w-full ">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

    <% content_for :title, "Tasks"%>

  <div class="flex justify-between items-center mb-10 mr-4">

    <h1 class="font-bold text-4xl text-white">Tasks</h1>
    <%= link_to "Nueva tarea", new_task_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>

  </div>

  <div class="flex flex-col lg:flex-row">

    <div class="w-full lg:w-2/3 mt-5 lg:ml-20">
      <div id="tasks" class="min-w-full text-white">
        <% @tasks.each do |task| %>
          <%= render task %>
          <p class="text-black">
            <%= link_to "Mostrar esta tarea", task, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="w-full lg:w-1/3 lg:pl-4 mt-20 lg:mt-40 lg:mr-20">
      <%= pie_chart Task.group(:completed).count %>
    </div>

  </div>
</div>
